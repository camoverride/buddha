[Unit]
Description=Display Buddha TV
After=default.target

[Service]
Type=simple
NotifyAccess=all
Restart=always
RestartSec=5
WorkingDirectory=/home/%u/buddha
ExecStart=/home/%u/buddha/.venv/bin/python /home/%u/buddha/run_display.py
StandardOutput=journal
StandardError=journal
Environment="PATH=/home/%u/buddha/.venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

[Install]
WantedBy=default.target
